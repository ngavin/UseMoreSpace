{
  "manifest_version": 2,
  "name": "UseMoreSpace",
  "description": "Website enhancements and automations",
  "version": "1.0.41",
  "author": "ngavin@umich.edu",
  "content_scripts": [
    {
      "matches": ["https://github.com/*"],
      "run_at": "document_idle",
      "js": ["gitHubSetMaxWidth.js"]
    },
    {
      "matches": [
        "https://stackoverflow.com/*",
        "https://*.stackexchange.com/*",
        "https://*.serverfault.com/*"
      ],
      "run_at": "document_idle",
      "js": ["stackOverflowSetMaxWidth.js"]
    },
    {
      "matches": ["https://developer.mozilla.org/*"],
      "run_at": "document_idle",
      "js": ["mdnSetMaxWidth.js"]
    },
    {
      "matches": ["https://mint.intuit.com/*"],
      "run_at": "document_idle",
      "js": ["mintSetMaxWidth.js"]
    },
    // {
    //   "matches": ["https://drive.google.com/*"],
    //   "run_at": "document_idle",
    //   "js": ["gdriveAutoImage.js"]
    // },
    {
      "matches": ["https://www.cnbc.com/*"],
      "run_at": "document_idle",
      "js": ["cnbcHideVideo.js"]
    },
    {
      "matches": ["https://google.com/*"],
      "run_at": "document_idle",
      "js": ["googleGenerateAI.js"]
    },
    {
      "matches": ["https://mail.google.com/*"],
      "run_at": "document_idle",
      "js": ["gmailHideSummarize.js"]
    },
    {
      "matches": ["https://*.google.com/*"],
      "run_at": "document_idle",
      "js": ["googleHideDriveStorageWarnings.js"]
    },
    {
      "matches": ["https://*.dropbox.com/*"],
      "run_at": "document_idle",
      "js": ["dropboxCloseToast.js"]
    }
  ]
}
