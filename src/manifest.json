{
	"manifest_version": 2,
	"name": "UseMoreSpace",
	"description": "Makes sites use more horizontal white space.\n\nSupported sites: [Github, Stack Overflow, Stack Exchange, Server Fault, MDN, Mint]",
	"version": "1.0.12",
	"author": "ngavin@umich.edu",
	"content_scripts":
	[
		{
			"matches": ["https://github.com/*"],
			"run_at": "document_idle",
			"js": ["gitHubSetMaxWidth.js"]
		},
		{
			"matches": ["https://stackoverflow.com/*", "https://*.stackexchange.com/*", "https://*.serverfault.com/*"],
			"run_at": "document_idle",
			"js": ["stackOverflowSetMaxWidth.js"]
		},
		{
			"matches": ["https://developer.mozilla.org/*"],
			"run_at": "document_idle",
			"js": ["mdnSetMaxWidth.js"]
		},
		{
			"matches": ["https://mint.intuit.com/*"],
			"run_at": "document_idle",
			"js": ["mintSetMaxWidth.js"]
		},
		{
			"matches": ["https://drive.google.com/*"],
			"run_at": "document_idle",
			"js": ["gdriveAutoImage.js"]
		}
	]
}